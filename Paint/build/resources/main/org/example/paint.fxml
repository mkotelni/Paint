<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--find out what borderpane is-->
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.text.Text?>
<BorderPane fx:id = "borderPane"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.PaintController"
            prefHeight="600.0" prefWidth="600.0">

    <top>
        <VBox>
            <MenuBar>
                <Menu text = "File" >
                    <MenuItem text = "Load Image" onAction = "#onLoadImage" />
                    <MenuItem text = "Save" onAction = "#onSave"/>
                    <MenuItem text = "Save as" onAction="#onSaveAs" />
                    <MenuItem text = "Exit" onAction = "#onExit"/>
                </Menu>

                <Menu text = "Help" >
                    <MenuItem text = "Help" onAction = "#onHelp" />
                    <MenuItem text = "About" onAction = "#onAbout" />
                </Menu>
            </MenuBar>

            <ToolBar>
                <HBox alignment="CENTER" spacing="5">
                    <Label text = "Brush Size:"/>
                    <TextField fx:id = "brushSize" text = "1" maxWidth = "40" onAction = "#onBrushSize"/>

                    <ColorPicker fx:id = "colorPicker"/>

                    <Label text = "Width:"/>
                    <TextField fx:id = "imageWidth"/>
                    <Label text = "Height"/>
                    <TextField fx:id = "imageHeight"/>
                    <Button text = "Resize" onAction = "#onResize"/>
                </HBox>
            </ToolBar>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth = "true" fitToHeight = "true">
            <Canvas fx:id = "canvas" width = "600" height = "600" />
        </ScrollPane>
    </center>
</BorderPane>
